{
	"$schema": "https://opencode.ai/config.json",
	"provider": {
		"openai": {
			"models": {
				"gpt-5": {
					"options": {
						"reasoningEffort": "high",
						"textVerbosity": "low",
						"reasoningSummary": "auto",
						"include": [
							"reasoning.encrypted_content"
						],
					},
				},
			},
		},
	},
	"mcp": {
		"playwright": {
			"type": "local",
			"command": [
				"playwright-mcp"
			]
		}
	},
	"instructions": [
		"beads.md"
	],
	"keybinds": {
		"leader": "ctrl+f"
	}
}
