{
	"$schema": "https://opencode.ai/config.json",
	"provider": {
		"openai": {
			"models": {
				"gpt-5": {
					"options": {
						"reasoningEffort": "high",
						"textVerbosity": "low",
						"reasoningSummary": "auto",
						"include": [
							"reasoning.encrypted_content"
						]
					}
				}
			}
		}
	},
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp"
		},
		"playwright": {
			"type": "local",
			"command": [
				"playwright-mcp"
			]
		},
		"websearch_exa": {
			"type": "remote",
			"url": "https://mcp.exa.ai/mcp"
		}
	},
	"instructions": [
		"beads.md"
	],
	"keybinds": {
		"leader": "ctrl+f"
	}
}
