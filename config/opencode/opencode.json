{
	"$schema": "https://opencode.ai/config.json",
	"provider": {
		"openai": {
			"models": {
				"gpt-5": {
					"options": {
						"reasoningEffort": "high",
						"textVerbosity": "low",
						"reasoningSummary": "auto",
						"include": [
							"reasoning.encrypted_content"
						]
					}
				}
			}
		},
		"zai coding plan": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "Z.AI GLM",
			"options": {
				"baseURL": "https://api.z.ai/api/paas/v4/"
			},
			"models": {
				"glm-4.7": {
					"name": "GLM-4.7",
					"variants": {
						"extra-high": {
							"thinking": {
								"type": "enabled",
								"budgetTokens": 64000
							}
						},
						"high": {
							"thinking": {
								"type": "enabled",
								"budgetTokens": 32000
							}
						},
						"fast": {
							"thinking": {
								"type": "disabled"
							}
						}
					}
				},
				"glm-4.7-flashx": {
					"name": "GLM-4.7-FlashX"
				},
				"glm-4.7-flash": {
					"name": "GLM-4.7-Flash"
				}
			}
		}
	},
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp"
		},
		"playwright": {
			"type": "local",
			"command": [
				"npx",
				"@playwright/mcp@latest"
			]
		},
		"websearch_exa": {
			"type": "remote",
			"url": "https://mcp.exa.ai/mcp"
		}
	},
	"instructions": [
		"beads.md"
	],
	"keybinds": {
		"leader": "ctrl+f"
	}
}
