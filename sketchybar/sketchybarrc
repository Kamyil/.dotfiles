#!/bin/bash

# Set up environment variables
export CONFIG_DIR="$HOME/.dotfiles/sketchybar"
export PLUGIN_DIR="$CONFIG_DIR/plugins"

# Shell-based sketchybar configuration with Lua-inspired structure
# This mimics the Lua structure until the Lua API becomes available

source "$CONFIG_DIR/appearance.sh"
source "$CONFIG_DIR/bar.sh"
source "$CONFIG_DIR/items.sh"

echo "sketchybar configuration loaded.."